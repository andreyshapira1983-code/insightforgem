{
  "name": "star-galaxy",
  "private": true,
  "scripts": {
    "dev": "netlify dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:check": "prettier -c .",
    "format:fix": "prettier -w .",
    "html:validate": "html-validate \"**/*.html\"",
    "css:lint": "stylelint \"**/*.css\"",
    "links:check": "linkinator $SITE_URL --recurse --timeout 30000",
    "audit": "node scripts/audit.js",
    "smoke:functions": "node tests/smoke-functions.js",
    "smoke:roles": "node tests/smoke-roles.js",
    "smoke:pages": "node tests/smoke-pages.js",
    "lhci": "lhci autorun --upload.target=temporary-public-storage",
    "test": "npm run lint && npm run format:check && npm run html:validate && npm run css:lint && npm run audit && npm run smoke:functions && npm run smoke:roles && npm run smoke:pages",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@babel/core": "^7.25.0",
    "@babel/parser": "^7.25.0",
    "@babel/traverse": "^7.25.0",
    "eslint": "^8.57.0",
    "html-validate": "^8.0.0",
    "linkinator": "^6.0.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0",
    "@lhci/cli": "^0.13.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  },
  "lint-staged": {
    "*.{js,css,html,md}": [
      "eslint --fix --max-warnings=0",
      "prettier -w"
    ],
    "*.json": "prettier -w"
  }
}
