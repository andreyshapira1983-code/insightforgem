{
  "name": "star-galaxy",
  "private": true,
  "scripts": {
    "dev": "netlify dev",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "test": "npm run format:check && npm run lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@babel/core": "^7.25.0",
    "@babel/parser": "^7.25.0",
    "@babel/traverse": "^7.25.0",
    "eslint": "^8.57.0",
    "html-validate": "^8.0.0",
    "linkinator": "^6.0.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0",
    "@lhci/cli": "^0.13.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --max-warnings=0",
      "prettier -w"
    ],
    "*.{css,html,md,json}": "prettier -w"
  }
}
